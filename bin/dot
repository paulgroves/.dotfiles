#!/usr/bin/env bash

set -e

while getopts e: flag
do
  case "${flag}" in
    e) email=${OPTARG};;
  esac
done

if [ -z "$email" ]
then
  echo "ERROR: Email argument (-e) is required"
  exit 1
else
  export DOTFILE_EMAIL=$email

  echo "Running all installers..."
  $HOME/.dotfiles/install.sh

  echo "Setting macOS defaults..."
  $HOME/.dotfiles/macos/set-defaults.sh
fi

source ~/.zshrc